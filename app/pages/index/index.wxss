/* 全局样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  padding: 30rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

/* 头部样式 */
.header {
  text-align: center;
  padding: 40rpx 0 60rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  margin-bottom: 30rpx;
}

/* 临时导航按钮样式 */
.temp-navigation {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin: 20rpx 0;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.temp-navigation button {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: white;
  border-radius: 15rpx;
  font-size: 24rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-top: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  backdrop-filter: blur(10rpx);
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.username {
  font-size: 28rpx;
  font-weight: 600;
}

/* 练习模式选择 */
.practice-modes {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 30rpx;
  color: #ffffff;
  text-align: center;
}

.mode-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.mode-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 25rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 25rpx;
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.mode-card:active {
  transform: translateY(2rpx);
  background: rgba(255, 255, 255, 0.25);
}

.card-icon {
  font-size: 60rpx;
  width: 80rpx;
  text-align: center;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.card-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.card-specs {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.card-arrow {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 统计概览 */
.stats-overview {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  padding: 40rpx;
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  gap: 30rpx;
  margin-top: 20rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 响应式设计 */
@media screen and (max-width: 768rpx) {
  .container {
    padding: 20rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
  }
  
  .temp-navigation {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .mode-card {
    padding: 25rpx;
  }
  
  .card-icon {
    font-size: 50rpx;
    width: 70rpx;
  }
  
  .card-title {
    font-size: 28rpx;
  }
  
  .stats-grid {
    flex-direction: column;
    gap: 20rpx;
  }
}

@media screen and (max-width: 480rpx) {
  .container {
    padding: 15rpx;
  }
  
  .mode-card {
    flex-direction: column;
    text-align: center;
    gap: 20rpx;
  }
  
  .card-content {
    align-items: center;
  }
} 