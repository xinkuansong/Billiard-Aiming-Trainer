/* 横屏布局容器 */
.container {
  display: flex;
  flex-direction: column; /* 默认为垂直布局 */
  height: 100vh;
  width: 100vw;
  background-color: #1a202c;
  color: white;
  overflow: hidden;
}

/* 当应用 two-column-layout 时，变为水平布局 */
.container.two-column-layout {
  flex-direction: row;
}

/* 左侧游戏区域 */
.game-area {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  position: relative;
}

.two-column-layout .game-area {
  flex: 7; /* 在两栏布局中，占据 70% */
}

/* 台球桌容器 */
.table-container {
  flex: 1;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 台球桌画布 - 中八球标准比例 2:1 */
.pool-table {
  width: 100%;
  aspect-ratio: 2 / 1; /* 关键：自动保持2:1的宽高比 */
  max-height: 95%; /* 限制最大高度，防止撑爆容器 */
  background: #0f5132;
  border: 6rpx solid #8b4513;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}

/* 瞄准信息面板 */
.aim-info-panel {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
  min-height: 100rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: center;
}

.angle-text, .distance-text {
  color: white;
  font-size: 28rpx;
  text-align: center;
  font-weight: 600;
}

/* 右侧控制区域 */
.control-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #2d3748;
  border-left: 1px solid #4a5568;
}

.two-column-layout .control-area {
  flex: 3; /* 在两栏布局中，占据 30% */
}

/* 控制区域头部 */
.control-header {
  text-align: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-bottom: 20rpx;
}

.control-title {
  display: block;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.table-specs, .ball-specs {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

/* 控制按钮区域 */
.control-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.control-btn {
  font-size: 28rpx;
  padding: 25rpx;
  border-radius: 20rpx;
  border: none;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.control-btn:active {
  transform: translateY(2rpx);
}

/* 按钮类型样式 */
button[type="primary"] {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

button[type="default"] {
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
}

button[type="warn"] {
  background: linear-gradient(135deg, #ff9800, #f57c00);
  color: white;
}

/* 练习统计 */
.practice-stats {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 15rpx;
  padding: 25rpx;
  flex: 1;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.stat-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.stat-value {
  color: white;
  font-size: 26rpx;
  font-weight: 600;
}

/* 返回按钮 */
.back-btn {
  background: linear-gradient(135deg, #607D8B, #455A64);
  color: white;
  font-size: 28rpx;
  padding: 25rpx;
  border-radius: 20rpx;
  border: none;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.back-btn:active {
  transform: translateY(2rpx);
}

/* 竖屏适配 */
@media screen and (orientation: portrait) {
  .container {
    flex-direction: column;
  }
  
  .control-area {
    width: 100%;
    height: 300rpx;
    border-left: none;
    border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  }
  
  .control-buttons {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .control-btn {
    flex: 1;
    min-width: 150rpx;
  }
} 