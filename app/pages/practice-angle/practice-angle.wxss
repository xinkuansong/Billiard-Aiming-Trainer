/* 横屏布局容器 */
.container {
  display: flex;
  height: 100vh;
  background: linear-gradient(135deg, #FF6B35 0%, #D2691E 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

/* 左侧角度显示区域 */
.angle-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  gap: 20rpx;
}

/* 角度画布容器 */
.angle-container {
  flex: 1;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 角度画布 */
.angle-canvas {
  width: 100%;
  aspect-ratio: 1 / 1; /* 关键：自动保持1:1的宽高比 */
  max-height: 95%; /* 限制最大高度，防止撑爆容器 */
  background: #2d3748;
  border: 4rpx solid #4a5568;
  border-radius: 20rpx;
  box-shadow: 
    inset 0 0 30rpx rgba(0, 0, 0, 0.4),
    0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}

/* 角度信息面板 */
.angle-info-panel {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: center;
}

.angle-text, .guide-text {
  color: white;
  font-size: 32rpx;
  text-align: center;
  font-weight: 600;
}

.guide-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 右侧控制区域 */
.control-area {
  width: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15rpx);
  border-left: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  gap: 30rpx;
}

/* 控制区域头部 */
.control-header {
  text-align: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-bottom: 20rpx;
}

.control-title {
  display: block;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.angle-specs, .precision-specs {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

/* 控制按钮区域 */
.control-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.control-btn {
  font-size: 28rpx;
  padding: 25rpx;
  border-radius: 20rpx;
  border: none;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.control-btn:active {
  transform: translateY(2rpx);
}

/* 按钮类型样式 */
button[type="primary"] {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

button[type="default"] {
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
}

button[type="warn"] {
  background: linear-gradient(135deg, #ff9800, #f57c00);
  color: white;
}

/* 练习统计 */
.practice-stats {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 15rpx;
  padding: 25rpx;
  flex: 1;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.stat-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.stat-value {
  color: white;
  font-size: 26rpx;
  font-weight: 600;
}

/* 返回按钮 */
.back-btn {
  background: linear-gradient(135deg, #607D8B, #455A64);
  color: white;
  font-size: 28rpx;
  padding: 25rpx;
  border-radius: 20rpx;
  border: none;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.back-btn:active {
  transform: translateY(2rpx);
}

/* 竖屏适配 */
@media screen and (orientation: portrait) {
  .container {
    flex-direction: column;
  }
  
  .control-area {
    width: 100%;
    height: 300rpx;
    border-left: none;
    border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  }
  
  .control-buttons {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .control-btn {
    flex: 1;
    min-width: 150rpx;
  }
  
  .angle-canvas {
    height: 400rpx;
  }
} 