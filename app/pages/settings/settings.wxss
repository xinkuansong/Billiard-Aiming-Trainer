.settings-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  padding: 20rpx;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 30rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-status {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 登录提示 */
.login-prompt {
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.prompt-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-btn {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 设置区域 */
.settings-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #ffffff;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  flex: 1;
}

.label-text {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.label-desc {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 选择器 */
.setting-picker {
  min-width: 200rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 15rpx;
  padding: 15rpx 20rpx;
  min-width: 180rpx;
}

.picker-content text:first-child {
  font-size: 26rpx;
}

.picker-arrow {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  margin-left: 15rpx;
}

/* 开关 */
.setting-switch {
  transform: scale(1.2);
}

/* 信息项 */
.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: background-color 0.2s ease;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item:active {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  margin: 0 -20rpx;
  padding: 25rpx 20rpx;
}

.info-content {
  flex: 1;
}

.info-text {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.info-desc {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.info-arrow {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

/* 操作按钮 */
.action-btn {
  width: 100%;
  padding: 25rpx;
  border-radius: 25rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #2196F3, #1976D2);
  color: white;
}

.action-btn:active {
  transform: translateY(2rpx);
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 20rpx;
  margin-top: 40rpx;
}

.version-text {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: rgba(255, 255, 255, 0.8);
}

.copyright {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 响应式设计 */
@media screen and (max-width: 480px) {
  .settings-container {
    padding: 15rpx;
  }
  
  .setting-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 20rpx;
  }
  
  .setting-picker {
    width: 100%;
  }
  
  .picker-content {
    width: 100%;
  }
} 